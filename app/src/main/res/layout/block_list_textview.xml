<?xml version="1.0" encoding="utf-8"?>

<!-- TODO: get padding right -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    tools:background="#FFFFFF">

    <RelativeLayout android:id="@+id/left_icon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <TextView android:id="@+id/eighth_block"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/colorAccent"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:lines="1"
            android:ellipsize="end"
            tools:text="Q" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView android:id="@+id/eighth_activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="?android:textColorPrimary"
            android:lines="1"
            android:ellipsize="end"
            tools:text="Name of the 8th period activity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView android:id="@+id/eighth_activity_rooms"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14sp"
                android:textColor="?android:textColorSecondary"
                android:lines="1"
                android:ellipsize="end"
                tools:text="1 Room, 2 Room, Red Room, Blue Room" />

            <TextView android:id="@+id/eighth_activity_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="14sp"
                android:lines="1"
                android:ellipsize="end"
                tools:text="Non-existent" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>