<?xml version="1.0" encoding="utf-8"?>

<!-- TODO: get padding, height (88dp) right -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingBottom="4dp"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView android:id="@+id/iodine_eighth_activity_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="?android:textColorPrimary"
            android:lines="1"
            android:ellipsize="end" />

        <TextView android:id="@+id/iodine_eighth_activity_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="14sp"
            android:lines="1"
            android:ellipsize="end" />

    </LinearLayout>

    <TextView android:id="@+id/iodine_eighth_activity_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?android:textColorSecondary"
        android:lines="1"
        android:ellipsize="end" />

    <TextView android:id="@+id/iodine_eighth_activity_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="?android:textColorSecondary"
        android:lines="1"
        android:ellipsize="end" />

</LinearLayout>